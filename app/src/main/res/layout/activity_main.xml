<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <Button
        android:id="@+id/btn_ir_datos_perfil"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_gravity="start"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="5dp"

        android:backgroundTint="@color/teal_700"

        android:text="Perfil"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_ir_ing"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_gravity="start"
        android:layout_marginStart="5dp"

        android:layout_marginTop="100dp"
        android:backgroundTint="@color/teal_700"

        android:text="Ingresos"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/my_toolbar"
        layout="@layout/activity_toolbar" />


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/btn_saldo"
        android:backgroundTint="@android:color/holo_orange_light"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <TextView
        android:id="@+id/ahorro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="210dp"
        android:text="Ahorro $ 00.00"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="75dp" />

    <Button
        android:id="@+id/btn_ir_gas"
        android:layout_width="125dp"
        android:layout_height="55dp"
        android:layout_gravity="start"

        android:layout_marginTop="100dp"
        android:backgroundTint="@android:color/holo_orange_light"

        android:text="Gastos"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/btn_ir_datos_perfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_ir_grafica"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/teal_700"

        android:text="Ver Graficos"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="295dp"
        android:layout_height="159dp"
        android:layout_marginTop="110dp"
        app:layout_constraintBottom_toBottomOf="@+id/ahorro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/f" />


</androidx.constraintlayout.widget.ConstraintLayout>